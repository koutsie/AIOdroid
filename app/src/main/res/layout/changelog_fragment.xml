<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:chg="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorBackground">

  <it.gmariotti.changelibs.library.view.ChangeLogRecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/changelog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_gravity="center"
    android:background="#ffffff"
    chg:layout_constraintBottom_toBottomOf="parent"
    chg:layout_constraintEnd_toEndOf="parent"
    chg:layout_constraintStart_toStartOf="parent"
    chg:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>